<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" 
        android:text="Select a TV"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|clip_vertical" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/TVSelect1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:onClick="onTVSelection"
                    android:text="SONY" />

                <RadioButton
                    android:id="@+id/TVSelect2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:onClick="onTVSelection"
                    android:text="Toshiba" />

            </RadioGroup>
        </TableRow>
    </TableLayout>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="6"
            android:gravity="center"
            android:text="Tabla De Botones Empieza"
            android:textSize="18dp"
            android:textStyle="bold"
            android:typeface="serif" >
        </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ToggleButton
            android:id="@+id/Power"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="ToggleButton"
            android:textOff="Power"
            android:textOn="Power" />

        <ToggleButton
            android:id="@+id/MUTE"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:onClick="onRemoteButton"
            android:textOff="MUTE"
            android:textOn="MUTE" />

        <Button
            android:id="@+id/CHUP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="CH +" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/VDW"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="Vol -" />

        <Button
            android:id="@+id/VUP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="Vol +" />

        <Button
            android:id="@+id/CHDW"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="CH -" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/B_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="1" />

        <Button
            android:id="@+id/B_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="2" />

        <Button
            android:id="@+id/B_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="3" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/B_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="4" />

        <Button
            android:id="@+id/B_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="5" />

        <Button
            android:id="@+id/B_6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="6" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/B_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="7" />

        <Button
            android:id="@+id/B_8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="8" />

        <Button
            android:id="@+id/B_9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="9" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/B_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="0" />
        <Button
            android:id="@+id/Prev_CH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="PREV CH" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="Favorites"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </TableRow>

	<TableRow
	        android:id="@+id/tableRow9"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center" >

	    <Spinner
	        android:id="@+id/Fav_spinner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	         />
	
	    <EditText
	        android:id="@+id/Fav_textfd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:digits="1234567890"
	        android:ems="5"
	        android:hint="Channel "
	        android:inputType="number"
	        android:maxLength="100"
	        android:singleLine="true" >
	
	        <requestFocus />
	    </EditText>
	     <Button
            android:id="@+id/Fav_add_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRemoteButton"
            android:text="ADD" />
	</TableRow>

	<TableRow
	    android:id="@+id/tableRow10"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

		<Button
		    android:id="@+id/Fav_erase_button"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:onClick="onRemoteButton"
		    android:text="Clear Favs" />

	</TableRow>

</TableLayout>  

